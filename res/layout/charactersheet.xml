<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
              android:layout_height="match_parent" android:rowCount="3" android:columnCount="1"
              android:background="#ffffff">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:layout_alignParentLeft="true"
            android:background="@drawable/header" android:minHeight="130dp" android:layout_alignParentRight="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTxtName"
            android:minWidth="250dp"
            android:layout_marginLeft="113dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="28dp" android:singleLine="true" android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTxtClass"
            android:layout_marginLeft="80dp"
            android:minWidth="200dp"
            android:layout_above="@+id/editTxtPlayer" android:layout_toRightOf="@+id/editTxtName"
            android:singleLine="true" android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTxtLevel"
            android:maxLength="2"
            android:layout_marginLeft="27dp" android:layout_above="@+id/editTxtXP"
            android:layout_alignLeft="@+id/editTxtXP" android:singleLine="true" android:textColor="#000000"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtPlayer"
              android:minWidth="215dp"
              android:layout_alignBaseline="@+id/editTxtXP" android:layout_alignBottom="@+id/editTxtXP"
              android:layout_toLeftOf="@+id/editTxtClass" android:singleLine="true" android:textColor="#000000"/>
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAlign"
              android:layout_marginLeft="61dp"
              android:minWidth="175dp"
              android:layout_below="@+id/editTxtClass" android:layout_alignLeft="@+id/editTxtClass"
              android:singleLine="true" android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTxtXP"
            android:layout_alignBottom="@+id/imageView2" android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp" android:singleLine="true" android:textColor="#000000"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="75dp" android:id="@+id/imageView3"
               android:layout_column="0" android:background="#ffffff" android:layout_columnSpan="1"
               android:layout_gravity="fill_horizontal" android:layout_row="0"
               android:layout_alignParentEnd="false" android:layout_alignParentTop="true"
               android:layout_alignParentRight="true"/>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tableRow2"
            android:layout_alignParentLeft="true" android:layout_alignRight="@+id/editTxtXP"
            android:layout_below="@+id/imageView2" android:layout_marginBottom="300dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="STR"
                android:id="@+id/textView2" android:textStyle="bold" android:textSize="28dp"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTxtSTR"
                android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true" android:inputType="number"
                android:maxLength="2" android:maxLines="1" android:shadowColor="#000000"
                android:autoText="false" android:textStyle="bold"
                android:textColor="#000000" android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Bonus To Hit (STR)"
                android:id="@+id/textView" android:textStyle="bold" android:singleLine="false" android:textSize="19dp"
                android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:id="@+id/editTxtBtoHit" android:maxLength="2" android:maxLines="1" android:maxWidth="50dp"
                android:minWidth="50dp" android:textStyle="bold" android:textColor="#000000"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Open Doors (STR)"
                  android:id="@+id/textView7" android:textStyle="bold" android:paddingLeft="10dp"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editTxtOpenDoor"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Damage Bonus (STR)"
                  android:id="@+id/textView9" android:textStyle="bold" android:paddingLeft="10dp"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editTxtDamageBon" android:maxLength="2" android:maxLines="1" android:maxWidth="50dp"
                android:minWidth="50dp" android:textStyle="bold" android:textColor="#000000"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Carry Mod (STR)"
                android:id="@+id/textView8" android:textStyle="bold" android:textSize="19dp"
                android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtCarryMod"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginTop="175dp" android:layout_marginBottom="250dp"
            android:id="@+id/tableRow" android:layout_alignParentRight="true" android:layout_alignParentEnd="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="DEX"
                  android:id="@+id/textView3" android:textStyle="bold" android:textSize="28dp"
                  android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtDEX"
                  android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true"
                  android:inputType="number" android:maxLength="2" android:maxLines="1" android:shadowColor="#000000"
                  android:autoText="false" android:textStyle="bold"
                  android:textColor="#000000" android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Bonus To Missle (DEX)"
                  android:id="@+id/textView4" android:textStyle="bold" android:singleLine="false"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editTxtBonToMiss"
                  android:maxLength="2" android:maxLines="1" android:textStyle="bold" android:textColor="#000000"
                  android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Armor Bonus (DEX)"
                  android:id="@+id/textView5" android:textStyle="bold" android:paddingLeft="10dp"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editTxtArmorBon"
                  android:maxLength="2" android:maxLines="1" android:textStyle="bold" android:textColor="#000000"
                  android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView android:layout_width="249dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Raise Dead Survival (CON)"
                  android:id="@+id/textView11" android:textStyle="bold"
                  android:textSize="19dp" android:paddingLeft="10dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editText"
                  android:maxLength="2" android:maxLines="1" android:textStyle="bold" android:textColor="#000000"
                  android:maxWidth="50dp" android:minWidth="50dp"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="220dp"
              android:layout_marginBottom="210dp" android:id="@+id/tableRow3" android:layout_marginRight="300dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="CON"
                  android:id="@+id/textView6" android:textStyle="bold" android:textSize="28dp"
                  android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtCON"
                  android:inputType="number" android:maxLength="2" android:maxLines="1" android:shadowColor="#000000"
                  android:autoText="false" android:textStyle="bold"
                  android:textColor="#000000" android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Hit Point Bonus (CON)"
                  android:id="@+id/textView10" android:textStyle="bold" android:singleLine="false"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editTxtHpBon"
                  android:maxLength="2" android:maxLines="1" android:textStyle="bold" android:textColor="#000000"
                  android:maxWidth="50dp" android:minWidth="50dp"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent"
              android:layout_marginBottom="28dp" android:id="@+id/tableRow4" android:layout_above="@+id/tableRow10"
              android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
              android:layout_alignRight="@+id/tableRow8" android:layout_alignEnd="@+id/tableRow8"
              android:layout_marginTop="260dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="INT"
                  android:id="@+id/textView12" android:textStyle="bold" android:textSize="28dp"
                  android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtINT"
                  android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true"
                  android:inputType="number" android:maxLength="2" android:maxLines="1" android:shadowColor="#000000"
                  android:autoText="false" android:textStyle="bold"
                  android:textColor="#000000" android:maxWidth="50dp" android:minWidth="50dp"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="300dp"
              android:layout_marginBottom="130dp" android:id="@+id/tableRow5" android:layout_toLeftOf="@+id/tableRow9">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="WIS"
                  android:id="@+id/textView13" android:textStyle="bold" android:textSize="28dp"
                  android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtWIS"
                  android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true"
                  android:inputType="number" android:maxLength="2" android:maxLines="1" android:shadowColor="#000000"
                  android:autoText="false" android:textStyle="bold"
                  android:textColor="#000000" android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Cleric 1st lvl Spell (WIS)"
                  android:id="@+id/textView14" android:textStyle="bold" android:singleLine="false"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editTxtClrSpell"
                  android:maxLength="2" android:maxLines="1" android:textColor="#000000" android:textStyle="bold"
                  android:maxWidth="50dp" android:minWidth="50dp"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="340dp"
              android:layout_marginBottom="95dp" android:id="@+id/tableRow6" android:layout_marginRight="450dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="CHA"
                  android:id="@+id/textView15" android:textStyle="bold" android:textSize="28dp"
                  android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtCHA"
                  android:layout_below="@+id/imageView2" android:layout_alignParentLeft="true"
                  android:inputType="number" android:maxLength="2" android:maxLines="1" android:shadowColor="#000000"
                  android:autoText="false" android:textStyle="bold"
                  android:textColor="#000000" android:maxWidth="50dp" android:minWidth="50dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Max # Heirlings (CHA)"
                  android:id="@+id/textView16" android:textStyle="bold" android:singleLine="false"
                  android:textSize="19dp" android:textColor="#000000"/>
        <EditText android:layout_width="wrap_content" android:layout_height="34dp" android:id="@+id/editTxtMaxHeir"
                  android:maxLength="2" android:maxLines="1" android:textColor="#000000" android:textStyle="bold"
                  android:maxWidth="50dp" android:minWidth="50dp"/>
    </TableRow>
    <TableRow android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginTop="380dp"
              android:layout_marginBottom="10dp" android:id="@+id/tableRow7"
              android:background="@drawable/ac" android:layout_toLeftOf="@+id/editTxtPlayer">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="3"
                android:id="@+id/editTxtAC" android:maxLength="2" android:maxLines="1"
                android:layout_marginLeft="40dp" android:layout_marginTop="10dp" android:textStyle="bold"
                android:textColor="#000000"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_alignTop="@+id/tableRow7"
            android:layout_toRightOf="@+id/tableRow7"
            android:layout_marginRight="650dp" android:background="@drawable/hp" android:layout_marginBottom="10dp"
            android:id="@+id/tableRow8">
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number"
                  android:ems="3" android:id="@+id/editTxtHP" android:maxLength="2" android:maxLines="1"
                  android:layout_marginLeft="50dp" android:layout_marginTop="10dp" android:textStyle="bold"
                  android:textColor="#000000"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/editTxtPlayer"
            android:layout_alignTop="@+id/tableRow6" android:layout_above="@+id/tableRow9" android:id="@+id/tableRow10">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="     9         8         7         6          5         4         3         2         1         0"
                android:id="@+id/textView17" android:textColor="#000000" android:textStyle="bold"/>
    </TableRow>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:id="@+id/tableRow9" android:layout_toRightOf="@+id/editTxtPlayer"
            android:layout_above="@+id/btnSave" android:layout_alignTop="@+id/tableRow8">
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/editTxtAC9" android:maxLength="2" android:maxLines="1" android:maxWidth="50dp"
                  android:minWidth="50dp" android:textStyle="bold" android:textColor="#000000"
                  android:layout_marginLeft="10dp" android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC8"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC7"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC6"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC5"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC4"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC3"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC2"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC1"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/editTxtAC0"
                  android:maxLength="2" android:maxLines="1" android:maxWidth="50dp" android:minWidth="50dp"
                  android:textStyle="bold" android:textColor="#000000" android:layout_marginLeft="10dp"
                  android:inputType="number"/>
    </TableRow>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Character"
            android:id="@+id/btnSave"
            android:layout_alignTop="@+id/btnDelete" android:layout_alignRight="@+id/tableRow9"
            android:layout_alignEnd="@+id/tableRow9" android:layout_marginRight="27dp" android:onClick="onClick"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Character"
            android:id="@+id/btnDelete" android:layout_alignBottom="@+id/tableRow8"
            android:layout_toRightOf="@+id/editTxtPlayer" android:onClick="onClick"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inventory"
            android:id="@+id/btnInv"
            android:layout_below="@+id/tableRow9" android:layout_alignRight="@+id/editTxtAlign"
            android:layout_alignEnd="@+id/editTxtAlign" android:onClick="onClick"/>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/saves"
            android:layout_above="@+id/tableRow10"
            android:layout_alignTop="@+id/tableRow3"
            android:layout_alignLeft="@+id/editTxtClass" android:layout_alignStart="@+id/editTxtClass"
            android:layout_toLeftOf="@+id/btnSave">
    </TableRow>

</RelativeLayout>